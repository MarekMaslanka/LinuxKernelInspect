{
	"name": "deku.kernel.inspector",
	"description": "Kernel source inspection tool",
	"version": "0.0.1",
	"publisher": "marek.maslanka",
	"private": true,
	"license": "MIT",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:c"
	],
	"main": "./out/extension.js",
	"contributes": {
		"capabilities": {
			"hoverProvider": "true"
		},
		"commands": [
			{
				"command": "outliner.outline",
				"title": "Outline"
			},
			{
				"command": "deku.inspect.doNotInspectFunction",
				"title": "Do not inspect the function",
				"icon": "$(close)"
			},
			{
				"command": "deku.stacktrace.record",
				"title": "Do not record stacktrace",
				"icon": "$(clear-all)"
			},
			{
				"command": "deku.ftrace.recordall",
				"title": "Turn on histogram",
				"icon": "$(graph)"
			},
			{
				"command": "deku.ftrace.clear",
				"title": "Clear histogram",
				"icon": "$(trash)"
			},
			{
				"command": "deku.ftrace.stop",
				"title": "Stop track the functions",
				"icon": "$(stop-circle)"
			},
			{
				"command": "deku.gotoFunction",
				"title": "Got to function"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "inspect-explorer",
					"title": "Inspects Explorer",
					"icon": "$(symbol-keyword)"
				}
			]
		},
		"views": {
			"inspect-explorer": [
				{
					"id": "documentOutline",
					"name": "File Inspects"
				},
				{
					"id": "functionReturnsTreeProvider",
					"name": "Function returns"
				},
				{
					"id": "functionStacktraceTreeProvider",
					"name": "Function stacktraces"
				},
				{
					"id": "inspects.file",
					"name": "Inspects"
				},
				{
					"type": "webview",
					"id": "kernelInspect-sqlSidebar",
					"name": "SQL",
					"icon": "database",
					"contextualTitle": "SQL"
				},
				{
					"id": "histogram",
					"name": "Histogram"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "deku.stacktrace.record",
					"when": "view == functionStacktraceTreeProvider",
					"group": "navigation"
				},
				{
					"command": "deku.ftrace.stop",
					"when": "view == histogram",
					"group": "navigation"
				},
				{
					"command": "deku.ftrace.clear",
					"when": "view == histogram",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "deku.inspect.doNotInspectFunction",
					"when": "view == inspects.file && viewItem == functionInspect",
					"group": "inline"
				}
			]
		},
		"viewsWelcome": [
			{
			  "view": "histogram",
			  "contents": "Keep track of which functions are called from this file.\n[Track the functions](command:deku.ftrace.recordall)"
			}
		],
		"colors": [
			{
				"id": "deku.histogram.treeItem.inactive",
				"description": "Color for an inactive function in histogram",
				"defaults": {
					"dark": "#999999",
					"light": "#999999"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "DEKU Inspect",
			"properties": {
			    "dekuinspect.path": {
				"type": "string",
				"default": "",
				"description": "Path to DEKU",
				"scope": "machine"
			    }
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "16.18.1",
		"@types/vscode": "1.72.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vscode/codicons": "0.0.20",
		"axios": "^0.26.1",
		"crc-32": "^1.2.2",
		"eslint": "^8.26.0",
		"typescript": "^4.8.4",
		"sqlite3": "^5.1.2"
	}
}
